<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- 日志文件路径配置 -->
    <property name="LOG_HOME" value="logs/customer" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n" />
    <property name="LOG_PATTERN_WITH_TRACE" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{traceId}] - %msg%n" />
    
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 客户管理模块总日志文件 -->
    <appender name="CUSTOMER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/customer.log</file>
        <encoder>
            <pattern>${LOG_PATTERN_WITH_TRACE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/customer.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- 客户API性能监控日志 -->
    <appender name="CUSTOMER_PERFORMANCE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/customer-performance.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{traceId}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/customer-performance.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
    
    <!-- 客户API错误日志 -->
    <appender name="CUSTOMER_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/customer-error.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{traceId}] - %msg%n%ex</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/customer-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>
    
    <!-- 客户数据库操作日志 -->
    <appender name="CUSTOMER_DB" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/customer-database.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{traceId}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/customer-database.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>15</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- 客户缓存操作日志 -->
    <appender name="CUSTOMER_CACHE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/customer-cache.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{traceId}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/customer-cache.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- 异步日志配置 -->
    <appender name="ASYNC_CUSTOMER_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>1024</queueSize>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="CUSTOMER_FILE"/>
    </appender>
    
    <appender name="ASYNC_CUSTOMER_PERFORMANCE" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="CUSTOMER_PERFORMANCE"/>
    </appender>
    
    <appender name="ASYNC_CUSTOMER_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>256</queueSize>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="CUSTOMER_ERROR"/>
    </appender>
    
    <!-- 客户管理模块Logger配置 -->
    
    <!-- 客户控制器日志 -->
    <logger name="com.yxrobot.controller.CustomerController" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- 客户服务层日志 -->
    <logger name="com.yxrobot.service.CustomerService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.service.CustomerStatsService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.service.CustomerDeviceService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.service.CustomerOrderService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.service.CustomerServiceRecordService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- 客户性能监控日志 -->
    <logger name="com.yxrobot.interceptor.CustomerPerformanceMonitorInterceptor" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_PERFORMANCE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- 客户异常处理日志 -->
    <logger name="com.yxrobot.exception.CustomerExceptionHandler" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- 客户数据验证日志 -->
    <logger name="com.yxrobot.validation.CustomerValidator" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- 客户缓存服务日志 -->
    <logger name="com.yxrobot.cache.CustomerCacheService" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_CACHE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- 客户数据库操作日志 -->
    <logger name="com.yxrobot.mapper.CustomerMapper" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.mapper.CustomerStatsMapper" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.mapper.CustomerDeviceMapper" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.mapper.CustomerOrderMapper" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <logger name="com.yxrobot.mapper.CustomerServiceRecordMapper" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </logger>
    
    <!-- MyBatis SQL日志 -->
    <logger name="org.apache.ibatis" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
    </logger>
    
    <logger name="java.sql.Connection" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
    </logger>
    
    <logger name="java.sql.Statement" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
    </logger>
    
    <logger name="java.sql.PreparedStatement" level="DEBUG" additivity="false">
        <appender-ref ref="CUSTOMER_DB"/>
    </logger>
    
    <!-- Spring框架日志 -->
    <logger name="org.springframework.web" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
    </logger>
    
    <!-- 根Logger配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_CUSTOMER_FILE"/>
        <appender-ref ref="ASYNC_CUSTOMER_ERROR"/>
    </root>
    
    <!-- 开发环境配置 -->
    <springProfile name="dev">
        <logger name="com.yxrobot" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>
    
    <!-- 测试环境配置 -->
    <springProfile name="test">
        <logger name="com.yxrobot" level="INFO"/>
        <logger name="org.springframework.web" level="INFO"/>
    </springProfile>
    
    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <logger name="com.yxrobot" level="WARN"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="com.yxrobot.interceptor.CustomerPerformanceMonitorInterceptor" level="INFO"/>
    </springProfile>
    
</configuration>